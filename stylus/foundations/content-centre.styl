//
// CONTENT CENTER
// ==============
// Used for centering content
//

grid-calc($col-span, $col-total, $grid-max-width = $base--max-width)
  ($grid-max-width + $grid--gutter) * $col-span / $col-total - $grid--gutter

.content-center
  clearfix()
  margin-left auto
  margin-right auto
  max-width $base--max-width

  .l-col-three--indented &
    max-width grid-calc(10, 12)

.content-center--tiny
  max-width grid-calc(4, 12)

.content-center--small
  max-width grid-calc(6, 12)

.content-center--medium
  max-width grid-calc(8, 12)

.content-center--large
  max-width grid-calc(10, 12)

// CONTENT GUTTER
// Ensures content doesn't touch browser edges on smaller screens

.content-gutter
  padding-left $content--gutter--mobile
  padding-right $content--gutter--mobile

  +width-min($mq--desktop)
    padding-left $content--gutter
    padding-right $content--gutter

.content-center--reverse-gutter
  .content-gutter > .l-col-three & // Only apply if in a 3 col layout
    margin-right ($content--gutter--mobile * -1)
    margin-left ($content--gutter--mobile * -1)

    +width-min($mq--desktop)
      margin-right ($content--gutter * -1)
      margin-left ($content--gutter * -1)

.content-gutter--gutterless
  padding-left 0
  padding-right 0
