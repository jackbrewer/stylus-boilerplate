//
// FONT SAMPLES
// ============
//


.font-sample--arial
  font-family $font--arial
  font-weight normal
  font-style normal

.font-sample--arial-bold
  font-family $font--arial
  font-weight bold
  font-style normal

.font-sample--arial-italic
  font-family $font--arial
  font-weight normal
  font-style italic

.font-sample--georgia
  font-family $font--georgia
  font-weight normal
  font-style normal

.font-sample--georgia-bold
  font-family $font--georgia
  font-weight bold
  font-style normal

.font-sample--georgia-italic
  font-family $font--georgia
  font-weight normal
  font-style italic


.font-sample
  //

.size--huge
  overflow hidden
  line-height 1em
  padding 0
  font-size 140px
  +width-min($mq--tablet)
    font-size 200px

.glyph-range
  line-height 1.1em
  text-rendering optimizeLegibility
  word-break break-all
  font-size 36px
  +width-min($mq--tablet)
    font-size 60px

.size-waterfall
  overflow-x auto
  -webkit-overflow-scrolling touch

  div
    white-space nowrap

  span
    display inline-block
    font-size 12px !important
    width 2em

.size-grid
  //

.size-grid__item
  position relative
  overflow hidden
  margin-bottom 30px
  max-height 4.5em
  text-rendering optimizeLegibility

  +width-min($mq--desktop)
    height 140px
    max-height none

  &:after
    content ''
    position absolute
    bottom 0
    left 0
    right 0
    height 1em
    background-image linear-gradient(to bottom, rgba($color--white, 0), rgba($color--white, 1))
